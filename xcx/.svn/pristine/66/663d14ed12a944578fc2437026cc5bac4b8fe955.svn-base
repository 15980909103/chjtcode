.my-content{width: 100vw;min-height: 100vh;background-color: #F7F7F7;}
[v-cloak] {display: none;}
#my-div1{width: 100vw;height: 32vh;position: relative;}
.div1-img{width:100vw;height: 100%;}
.div1-content{width:90vw;background-color: #FFF;border-radius:1.5vw;padding:2vh 5vw;position: absolute;left:5vw;bottom:-14vh;display: flex;flex-direction:column;justify-content:space-between;}
.div1-c1{display: flex;justify-content:space-between;}
.div1-c1-li1{width:50vw;display: flex;}
.div1-c1-li2{width:30vw;font-size:3.1vw;text-align: right;color:#ACACAC;}
.div1-c1-title{width:40vw;font-size:4.5vw;font-weight: 600;}
.div1-c1-tag{width:10vw;font-size: 3.3vw;background-color:#D22627;color: #FFF;border-radius: 1vw;text-align: center;}
.div1-c2{display: flex;padding:2vh 0;}
.div1-c2 div:nth-child(1){font-size: 4.5vw;font-weight: 600;color: #D22A2B;}
.div1-c2 div:nth-child(2){font-size: 3.5vw;color: #B1B1B1;margin-left: 3vw;}
.div1-c3{width:80vw;padding-top: 2vh;border-top:1px solid #FAFAFA;display: flex;justify-content:space-around;}
.div1-c3-li{width:25.5vw;text-align: center;}
.div1-c3-li div:nth-child(1){font-size: 3.8vw;color: #A2A2A2;}
.div1-c3-li div:nth-child(2){font-size: 5vw;color: #353535;}
.div1-c3-l{height: 8vw;border-left:2px solid #F7F6F6;}
#my-div2{width: 100vw;height:54vh;top: 46vh;}
.div2-time{font-size:3.8vw;color: #5E5E5E;text-align: center;padding:2vh 0;}
.div2-content{width: 90vw;background-color: #FFF;margin:0 5vw;padding:2vh 5vw;}
.div2-li1{display: flex;align-items:center;}
.div2-li1 img{width: 10vw;height: 10vw;border-radius: 50%;}
.div2-li1 div{margin-left: 3vw;}
.div2-li2{font-size: 4vw;color: #555;margin-top:2vh;}
.div2-li2 span{color:#D32C2B;}

.div1-img {
  background-color: #f1f1f1;
}

.div1-content {
  bottom: 0;
  transform: translate(0, 50%);
}

#my-div2 {
  top: 42vh;
  height: 58vh;
}
