#my-view1{width: 100vw;position: relative;}
#my-view1 image{width: 100vw;height: 60vh;}
.view1-floor{background-color:#FFF;font-size: 3.3vw;padding:.5vh 3vw;border-radius:5vh;position: absolute;}
.view1-tick{background-color: #0075D4;color: #FFF;}
#my-footer{width: 90vw;height: 8vh;background-color: #FFF;position: fixed;left: 0;bottom: 0;padding: 1vh 5vw;display:flex;align-items:center;}
#my-footer image{width: 12vw;height: 12vw;border-radius: 6vw;}
.f-img{width: 12vw;height: 12vw;}
.f-name{width: 20vw;margin-left: 2vw;}
.f-name-1{font-size: 4.5vw;font-weight: 600;line-height: 4vh;}
.f-name-2{font-size: 3.3vw;color: #999;line-height: 4vh;}
.f-btn1{width: 26vw;line-height:8vh;border-radius:1vw;margin-left: 2vw;background: linear-gradient(45deg,#eb3d00,#eb6100);color: #FFF;text-align: center;font-size: 4vw;}
.f-btn2{width: 26vw;line-height:8vh;border-radius:1vw;margin-left: 2vw;background: linear-gradient(45deg,#ec0c0e,#eb3d00);color: #FFF;text-align: center;font-size: 4vw;}
#my-swiper{width: 100vw;height: 30vh;background-color: #F8F8F9;overflow: hidden;}
.swiper{width: 90vw;height: 28vh;margin-top:2vh;border-left: 5vw solid #FFF;border-right: 5vw solid #FFF;}
.swiper-li{width: 70vw;height: 24vh;border-left: 5vw solid #F8F8F9;border-right: 5vw solid #F8F8F9;background-color: #FFF;padding: 2vh 5vw;}
.swiper-view1{display: flex;justify-content:space-between;align-items:center;}
.swiper-view1 view:nth-child(1){font-size: 4.5vw;font-weight: 600;}
.swiper-view1 view:nth-child(2){font-size: 4vw;color: #999;}
.swiper-view1 view:nth-child(2) .van-icon{vertical-align:-15%;}
.swiper-view2{display: flex;}
.swiper-view2 view{width: 35vw;font-size: 3.5vw;color: #999;padding: 2vh 0;border-bottom: 1px solid #f1f1f1;}
.swiper-view3{display: flex;flex-wrap:wrap;}
.swiper-view3 view{width: 35vw;font-size: 4vw;color: #999;padding: 2vh 0 0;}
.swiper-view3 view text{color: #333;font-weight: 500;}
