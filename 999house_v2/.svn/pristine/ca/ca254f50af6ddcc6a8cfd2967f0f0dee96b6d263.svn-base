/* 导航样式 */

.nav{
	height: 3.72rem;
	margin: 0.4rem 0;
	width: 100vw;
	display: flex;
	overflow-x: scroll;
	-webkit-overflow-scrolling: touch;
}

.nav-wrap,
.nav-box{
	width: 100vw;
	height: 100%;
}

.nav-box{
	display: flex;
	flex-wrap: wrap;
}

.nav-item{
	width: 1.875rem;
	height: 1.86rem;
	font-size: 0.3rem;
	font-weight: 500;
	color: #212121;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.nav-item img{
	width: 1.1rem;
	height: 1.1rem;
	margin-bottom: 0.15rem;
}