#app{
	background-color: rgba(26, 38, 114, 1);
}

.poster{
	width: 100%;
	min-height: 90vh;
}

.van-tabs{
	margin-top: .2rem;
	padding-bottom: 2rem;
}

.van-tabs__nav{
	background-color: rgba(0,0,0,0) !important;
}


.van-tab{
	font-size: .3rem;
	color: rgba(255, 255, 255, .6);
}

.van-tab--active{
	/* font-size: .30rem; */
	color: rgba(255, 255, 255, 1);
}

.van-tabs__line{
    width: .62rem;
    background-image: linear-gradient(-45deg,#59d4f0, #cd59f0);
    height: .09rem;
    bottom: 15px;
}

.van-tag{
	margin-left: .2rem;
	font-size: .22rem;
	color: rgba(173, 173, 173, 1);
}

.tag-1{
    margin-left: 0rem;
    color: #fff !important;
    background: linear-gradient(90deg, #ee0a24 0%, #ff976a 100%);
}

.house{
	width: 100%;
	box-sizing: border-box;
	padding: 0 .32rem;
	display: flex;
	justify-content: space-between;
	flex-wrap: wrap;
}

.house-item{
	width: 100%;
	background-color: #fff;
	margin-top: .42rem;
	box-sizing: border-box;
	padding-bottom: .2rem;
	border-radius: .15rem;
    box-shadow: 1px 1px 0px 0px #969799;
}

.house-top{
	width: 100%;
	height: 3.74rem;
	border-radius: 0.2rem 0.2rem 0.2rem 0.2rem;
    box-shadow: 0px 3px 5px 1px #deefff;
}

.house-wrap{
	position: relative;
	width: 100%;
	box-sizing: border-box;
	padding: 0 .2rem;
	letter-spacing:1px;
}

.house-name{
	font-size: .35rem;
	margin: .15rem 0 .15rem;
	display: flex;
	align-items: center;
}

.house-info{
	width: 65%;
	font-size: .2rem;
	color: rgba(117, 117, 117, 1);
	margin: .15rem 0 .15rem;
}
.house-tip{width: 65%;}


.house-info span{
	margin-right: .16rem;
	position: relative;
}

.house-info span::before{
	content: '';
	width: 0.02rem;
	height: 80%;
	background-color: rgba(117, 117, 117, .4);
	position: absolute;
	top: 15%;
	right: -0.12rem;
	
}
.house-price{
	width: 65%;
    letter-spacing: 0;
    font-size: .25rem;
	color: #fd3249;
}

.house-price span{
	font-weight: 600;
	font-size: .4rem;
	margin: 0 .1rem 0 0;
}

.house-title img{
	width: .4rem;
	height: .4rem;
	vertical-align: middle;
	margin-top: -.04rem;
	display: inline-table;
}

.house-title-btn{
	position: absolute;
    right: .15rem;
    bottom: 0rem;
	
}
.house-title-btn img{
    width: 2.25rem;
    height: 2.1rem;
}

.house-title{
    font-size: .26rem;
    color: #fd3249;
    font-weight: 600;
	
}
/*
.house-title-detail{
  margin: .2rem 0 .0rem 0;	
}
*/
.house-price-detail{
	font-weight: 600;
    font-size: .4rem;
    margin: 0 .1rem 0 0;
	letter-spacing: 0;
    color: #fd3249;
}

.apply-btn{
	width: 100%;
	height: .78rem;
	margin-top: .2rem;
	background: linear-gradient(90deg, #FFA640 0%, #FE8D35 100%);
	color: #fff;
	font-size: .34rem;
}

.box{
	display: flex;
	flex-wrap: wrap;
	box-sizing: border-box;
	padding: 0 .32rem 2rem;
}

.box .house{
	width: 3.26rem;
	padding: 0;
}

.box .house:nth-child(2n-1){
	margin-right: .34rem;
}

.box .house-top{
	height: 2rem;
}

.box .house-name{
	margin-top: .16rem;
	display: block;
}

.box .house-tip{
	margin-top: .1rem;
}

.box .house-info{
	margin: .12rem 0;
	font-size: .2rem;
}

.box .apply-btn{
	height: .6rem;
	margin-top: .22rem;
	font-size: .24rem;
}
.btn-bg{
	background:#fff;
	
	
}
.bottom-tabber-12{
	width: 100%;
	height: 1.2rem;
	display: flex;
	justify-content: center;
	align-items: center;
	position: fixed;
	bottom: 0;
	z-index: 1000;
 
}
.btn-box button{
	background:linear-gradient(90deg, #59d4f0 0%, #cd59f0 100%);
		box-shadow: 0 -0.02rem 0.1rem 0 rgba(0, 0, 0, 0.1); 
}
.van-button--default{
	
	border:none;
	color:#fff;
}
.van-tag--default.van-tag--plain {
    color: #4c4c4c;
    background: #e5f2ff;
    border: none;
} 
.van-tag--plain::before {
   border:none;
} 

.bottom-tabber-12 .btn-box{
	font-weight: 800;
    letter-spacing: .01rem;
	flex: 1;
	padding: 0 .32rem;

}

.bottom-tabber-12 a{
	width: 100%;
}

.bottom-tabber-12 .van-button{
	width: 100%;
	height: .78rem;
}

.btn-box-home{
	position: fixed;
	right: .1rem;
	top: 8rem;
    background: linear-gradient(90deg, #59d4f0 0%, #cd59f0 100%);
    width: 50px;
    height: 50px;
	border-radius: 50%;
	box-shadow: 0 0 .1rem rgba(0,0,0,6);
	font-weight: bold;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #fff;
}