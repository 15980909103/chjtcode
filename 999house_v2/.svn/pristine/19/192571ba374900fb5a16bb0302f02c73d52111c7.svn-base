/* @import url("http://at.alicdn.com/t/font_2099285_i2d49jk1pp9.css"); */
@import url("./iconfont.css");
html{
	font-family: sans-serif;
}
html,body,header,section,footer,div,ul,ol,li,img,a,span,em,del,legend,center,strong,var,fieldset,form,label,dl,dt,dd,cite,input,hr,time,mark,code,figcaption,figure,textarea,h1,h2,h3,h4,h5,h6,p{
	margin:0;
	border:0;
	padding:0;
	font-style:normal;
}
html,body {
	-webkit-touch-callout:none;
	-webkit-text-size-adjust:none;
	-webkit-tap-highlight-color:rgba(0, 0, 0, 0);
	-webkit-user-select:none;
	background-color: #fff;
	touch-action: none;
}
nav,article,aside,details,main,header,footer,section,fieldset,figcaption,figure{
	display: block;
}
img,a,button,em,del,strong,var,label,cite,small,time,mark,code,textarea{
	display:inline-block;
}
header,section,footer {
	position:relative;
}
ol,ul{
	list-style:none;
}
input,button,textarea {
	border:0;
	margin:0;
	padding:0;
	font-size:1em;
	line-height:1em;
	/*-webkit-appearance:none;*/
	background-color:rgba(0, 0, 0, 0);
}
span{
	display:inline-block;
}
i{
	font-style: normal;
}
a:active, a:hover {
  outline: 0;
}
a, a:visited{
	text-decoration:none;
}

label, .wordWrap{
    word-wrap: break-word;
    word-break: break-all;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}
td,th {
  padding: 0;
}
.fl{
	float: left;
}
.fr{
	float: right;
}
.clearfix:after{
	content: '';
	display: block;
	clear: both;
	visibility:hidden;
	line-height: 0;
	height:0;
}
[v-cloak] {
	display: none; 
}
/*隐藏滚轮*/
::-webkit-scrollbar {
	display: none;
}

#app{
	height: 100vh;
	width: 100vw;
	overflow-y: scroll;
	-webkit-overflow-scrolling: touch;
	font-size: 0.28rem;
}

/**
 *	文字省略
 *	（行数）
 *	-webkit-line-clamp: 1;
 */
.text-omit{
	text-align: justify;
	text-justify: newspaper;
	word-break: break-all;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
}

.color-icon-orange{
	color: rgba(252, 77, 57, 1);
}

.color-icon-blue{
	color: rgba(57, 149, 252, 1);
}

.houses-bg-blue{	
	color: #fff !important;
	background: linear-gradient(90deg, #6BCFFF 0%, #1EA5FE 100%);
}

.houses-bg-orange{	
	color: #fff !important;
	background: linear-gradient(90deg, #FFA161 0%, #FE7B1E 100%);
}

.houses-bg-purple{
	color: #fff !important;
	background: linear-gradient(90deg, #C597FF 0%, #9B4AF0 100%);
}

.houses-bg-blue2{
	color: #fff !important;
	background: linear-gradient(90deg, #2FD9F3 0%, #07B7D5 100%);
}

.margin-left{
	margin-left: 0.1rem;
}

.text-active{
	color: rgba(254, 130, 30, 1) !important;
}

.bg-active{
	background-color: rgba(254, 130, 30, 1) !important;
}

/* tabs统一样式 需要直接在vant组件加上tabs类名 */
.tabs .van-tabs__wrap{
	border-bottom: 0.01rem solid rgba(224, 224, 224, 1);
}

.tabs .van-tabs__line{
	width: 0.52rem;
}

.van-tabs__line{
	background-color: rgba(254, 130, 30, 1) !important;
}

.tabs .van-tab--active{
	color: rgba(254, 130, 30, 1);
}

/* vant弹窗样式 */
.van-dialog{
	width: 5rem;
	border-radius: 0;
}

.van-dialog__confirm, .van-dialog__confirm:active{
	color: rgba(254, 130, 30, 1);
}

/* 无数据 */
.list_null{
	width: 100%;
	height: 8rem;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	text-align: center;
}

.list_null img{
	width: 3.64rem !important;
}

.list_null p{
	margin-top: .3rem;
	font-size: .28rem;
	color: rgba(173, 173, 173, 1);
}