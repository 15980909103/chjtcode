<script type="module">
	import { http, loginMixin } from '../../common/js/method/http.js?v=1.1';
	Vue.use(http);

	const myComponents = [
		'../../components/houses/template_hot_news/index',
	];
	
	$api.addComponents(myComponents)
		.then(()=>{
			
			Vue.use(vant.Lazyload);
			 
			
			const app = new Vue({
				el: '#app',
				data: {
					list: [
						// {
						// 	type: 1,
						// 	tip: '测评',
						// 	title: ' 89平的三室小复式样板房将于2020-10-12日开放，欢 迎各位参观，本套式是小区很好的户型，全局透亮。',
						// 	img: ['../../static/logo.png']
						// },
					],
					estate_id: 0,
					typeId : 0,
					listNull: false
				},
				components: {
					housesHotNews
				},
				created() {
					this.estate_id = $api.funcUrlDel().option.id;
					this.typeId = $api.funcUrlDel().option.typeId;
					this.setTitle();
					
					// this.$nextTick(()=>{
					// 	this.$refs.DOM.scrollTo(0,3500)
					// })
					if(this.typeId == '4'){
						this.getNews()
					}else{
						this.getEval()
					}
				},
				mounted() {
					
				},
				methods:{
					setTitle() {
						document.title = this.typeId == '4' ? '实时资讯' : '实时测评';
					},
					// 获取楼盘资讯
					getNews() {
						const id = this.estate_id;
						const data = {
							id: id,
							dotype: 'news'
						};		
						this.$http.ajax({
							url: '/index/estates/getEstateArticle',
							data: data,
						}).then( res=>{
							let data = res.data;
							const newData = [];
							
							data.map(item=>{
								const obj = {};
								const arr = [];
								
								obj.id = item.id;
								obj.title = item.name;
								obj.img = item.img_url;
								obj.type = item.type;
								obj.tip = '资讯';
								obj.time = item.create_time;
								
								newData.push(obj);
							})

							this.list = newData;

							if( newData.length == 0 ){
								this.listNull = true;
							}
							// console.log(data);
						})
					},
					// 获取楼盘测评
					getEval() {
						const id = this.estate_id;
						const data = {
							id: id,
							dotype: 'assess'
						};
							
						this.$http.ajax({
							url: '/index/estates/getEstateArticle',
							data: data,
						}).then( res=>{
							let data = res.data;
							const newData = [];
							
							data.map(item=>{
								const obj = {};
								obj.id = item.id;
								obj.img = item.img_url;
								obj.title = item.name;
								obj.type = item.type ;
								obj.tip = '测评';
								
								newData.push(obj);
							})
							
							this.list = newData
							if( newData.length == 0 ){
								this.listNull = true;
							}
							// console.log(data);
						})
					},
				},
			})
			
			
			
		})
	
</script>