/* 头部样式 */
.header{
	width: 100%;
	height: 2.04rem;
}

.header-box{
	width: 100%;
	background-color: #fff;
	padding: 0 0.32rem 0.2rem;
	box-sizing: border-box;
	position: fixed;
	top: 0;
	z-index: 90;
}

.header-options{
	font-size: 0.26rem;
	color: rgba(117, 117, 117, 1);
	padding: 0.3rem 0;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.header-location{
	font-size: 0.3rem;
	color: #212121;
	font-weight: 500;
}

.iconjiantou{
	font-size: 0.26rem;
	margin-left: 0.02rem;
}

.header-scan{
	margin-left: 0.4rem;
}

.iconzhoubian,
.iconsaoma{
	font-weight: 600;
	font-size: 0.24rem;
	margin-right: 0.12rem;
}

.header-search{
	width: 100%;
	height: 0.8rem;
	font-size: 0.26rem;
	color: rgba(173, 173, 173, 1);
	background: #FFFFFF;
	box-shadow: 0px 3px 20px 0px #F5F5F5;
	border-radius: 6px;
	border: 1px solid #E0E0E0;
	display: flex;
	align-items: center;
}

.iconsearch{
	font-size: 0.3rem;
	margin-left: 0.28rem;
	display: flex;
	align-items: center;
}

.header-tip{
	margin-left: 0.15rem;
	font-size: 0.26rem;
}