/**
 * 这里是uni-app内置的常用样式变量
 *
 * uni-app 官方扩展插件及插件市场（https://ext.dcloud.net.cn）上很多三方插件均使用了这些样式变量
 * 如果你是插件开发者，建议你使用scss预处理，并在插件代码中直接使用这些变量（无需 import 这个文件），方便用户通过搭积木的方式开发整体风格一致的App
 *
 */

/**
 * 如果你是App开发者（插件使用者），你可以通过修改这些变量来定制自己的插件主题，实现自定义主题功能
 *
 * 如果你的项目同样使用了scss预处理，你也可以直接在你的 scss 代码中使用如下变量，同时无需 import 这个文件
 */
/* @import url("http://at.alicdn.com/t/font_2099285_i2d49jk1pp9.css"); */
@import 'uview-ui/theme.scss';

html{
	font-family: sans-serif;
}
html,body,header,section,footer,div,ul,ol,li,img,a,span,em,del,legend,center,strong,var,fieldset,form,label,dl,dt,dd,cite,input,hr,time,mark,code,figcaption,figure,textarea,h1,h2,h3,h4,h5,h6,p{
	margin:0;
	border:0;
	padding:0;
	font-style:normal;
}
html,body {
	-webkit-touch-callout:none;
	-webkit-text-size-adjust:none;
	-webkit-tap-highlight-color:rgba(0, 0, 0, 0);
	-webkit-user-select:none;
	background-color: #fff;
	touch-action: none;
}
nav,article,aside,details,main,header,footer,section,fieldset,figcaption,figure{
	display: block;
}
img,a,button,em,del,strong,var,label,cite,small,time,mark,code,textarea{
	display:inline-block;
}
header,section,footer {
	position:relative;
}
ol,ul{
	list-style:none;
}
input,button,textarea {
	border:0;
	margin:0;
	padding:0;
	font-size:1em;
	line-height:1em;
	/*-webkit-appearance:none;*/
	background-color:rgba(0, 0, 0, 0);
}
span{
	display:inline-block;
}
i{
	font-style: normal;
}
a:active, a:hover {
  outline: 0;
}
a, a:visited{
	text-decoration:none;
}

label, .wordWrap{
    word-wrap: break-word;
    word-break: break-all;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}
td,th {
  padding: 0;
}
.fl{
	float: left;
}
.fr{
	float: right;
}
.clearfix:after{
	content: '';
	display: block;
	clear: both;
	visibility:hidden;
	line-height: 0;
	height:0;
}
[v-cloak] {
	display: none; 
}
/*隐藏滚轮*/
::-webkit-scrollbar {
	display: none;
}

#app{
	height: 100vh;
	width: 100vw;
	overflow-y: scroll;
	-webkit-overflow-scrolling: touch;
	font-size: 28rpx;
}

/**
 *	文字省略
 *	（行数）
 *	-webkit-line-clamp: 1;
 */
.text-omit{
	text-align: justify;
	text-justify: newspaper;
	word-break: break-all;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
}

.van-ellipsis{
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.van-multi-ellipsis--l2{
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.color-icon-orange{
	color: rgba(252, 77, 57, 1);
}

.color-icon-blue{
	color: rgba(57, 149, 252, 1);
}

.houses-bg-blue{	
	color: #fff !important;
	background: linear-gradient(90deg, #6BCFFF 0%, #1EA5FE 100%);
}

.houses-bg-orange{	
	color: #fff !important;
	background: linear-gradient(90deg, #FFA161 0%, #FE7B1E 100%);
}

.houses-bg-purple{
	color: #fff !important;
	background: linear-gradient(90deg, #C597FF 0%, #9B4AF0 100%);
}

.houses-bg-blue2{
	color: #fff !important;
	background: linear-gradient(90deg, #2FD9F3 0%, #07B7D5 100%);
}

.margin-left{
	margin-left: 10rpx;
}

.text-active{
	color: rgba(254, 130, 30, 1) !important;
}

.bg-active{
	background-color: rgba(254, 130, 30, 1) !important;
}

/* tabs统一样式 需要直接在vant组件加上tabs类名 */
.tabs .van-tabs__wrap{
	border-bottom: 1px solid rgba(224, 224, 224, 1);
}

.tabs .van-tabs__line{
	width: 52rpx;
}

.van-tabs__line{
	background-color: rgba(254, 130, 30, 1) !important;
}

.tabs .van-tab--active{
	color: rgba(254, 130, 30, 1);
}

/* vant弹窗样式 */
.van-dialog{
	width: 500rpx;
	border-radius: 0;
}

.van-dialog__confirm, .van-dialog__confirm:active{
	color: rgba(254, 130, 30, 1);
}

/* 无数据 */
.list_null{
	width: 100%;
	height: 800rpx;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	text-align: center;
}

.list_null img{
	width: 364rpx !important;
	height: 239rpx;
}

.list_null p{
	margin-top: 30rpx;
	font-size: 28rpx;
	color: rgba(173, 173, 173, 1);
}

/deep/ .u-size-mini{
	font-size: 24rpx !important;
}

.van-slide-down-enter-active {
	-webkit-animation: slideDownEnter .3s both ease-out;
	animation: slideDownEnter .3s both ease-out
}

.van-slide-down-leave-active {
	-webkit-animation: slideDownLeave .3s both ease;
	animation: slideDownLeave .3s both ease
}

@-webkit-keyframes slideDownEnter {
	from {
		-webkit-transform: translate3d(0, -100%, 0);
		transform: translate3d(0, -100%, 0)
	}
}

@keyframes slideDownEnter {
	from {
		-webkit-transform: translate3d(0, -100%, 0);
		transform: translate3d(0, -100%, 0)
	}
}

@-webkit-keyframes slideDownLeave {
	to {
		-webkit-transform: translate3d(0, -100%, 0);
		transform: translate3d(0, -100%, 0)
	}
}

@keyframes slideDownLeave {
	to {
		-webkit-transform: translate3d(0, -100%, 0);
		transform: translate3d(0, -100%, 0)
	}
}