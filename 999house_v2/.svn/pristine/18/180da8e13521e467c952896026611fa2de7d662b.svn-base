import {requests, getToken, getSid} from '../requests.js';
//需要加载配置项时
const loadSetting = function(app = getApp()){
	var promise = new Promise((resolve, reject) => {
		requests({
			host: app.globalData.host,
			url: 'home/getSys',
			data: {},
			success: function (res) {
				wx.hideLoading();
				//console.log(">>>获取配置数据");
				//console.log(res);
				resolve(res)
			},fail: function (e) {
				wx.hideLoading();
				reject("网络异常");
			}
		})
	});
	return promise;
}

