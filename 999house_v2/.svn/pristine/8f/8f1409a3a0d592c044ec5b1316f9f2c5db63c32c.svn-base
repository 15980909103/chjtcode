.banner{
	height: 1.38rem;
	padding: 0 0.32rem;
	box-sizing: border-box;
	touch-action: pan-y;
}

.my-swipe .van-swipe-item {
	height: 1.38rem;
	color: #fff;
	text-align: center;
}

.my-swipe .van-swipe-item .banner-img{
	width: 100%;
	height: 100%;
}

.my-swipe .van-swipe__indicators{
	left: auto;
	right: 0.18rem;
	bottom: 0.12rem;
	transform: none;
}

.my-swipe .van-swipe__indicator--active{
	width: 0.24rem;
	border-radius: 5px;
}