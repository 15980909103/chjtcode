.box{
	box-sizing: border-box;
	padding: .44rem .32rem 2rem;
}

.tip{
	display: flex;
	flex-wrap: wrap;
	margin-bottom: 0.44rem;
}

.tip span{
	margin-right: .3rem;
}

.btn{
	width: 100%;
	height: 0.98rem;
	background-color: #fff;
	box-shadow: 0px -0.02rem .1rem 0px rgba(230, 230, 230, 0.5);
	position: fixed;
	bottom: 0;
	display: flex;
	justify-content: center;
	align-items: center;
}

.btn .van-button{
	width: 6.86rem;
	height: .78rem;
}