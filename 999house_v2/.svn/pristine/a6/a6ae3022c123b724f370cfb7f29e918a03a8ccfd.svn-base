.discount_box{
	background-image: url(background_red.png);
	background-repeat: no-repeat;
	background-size: 100% auto;
	background-position: top center;
	overflow: auto;
}
.discount_conter{
	background-image: url(./background_coupon_vertical.png);
	background-repeat: no-repeat;
	background-size: 100% 100%;
	margin-top: 60rpx;
	height: 1096rpx;
	text-align: center;
	overflow: auto;
	.shop_selet{
		margin-top: 38rpx;
		margin-bottom: 38rpx;
	}
	.coupon_name{
		font-size: 32rpx;
		color: #212121;
		font-weight: 500;
		margin-bottom: 43rpx;
	}
	.coupon_number{
		font-size: 54rpx;
		color: #ED3335;
		font-weight: bold;
	}
	.qrcode{
		margin-top: 190rpx;
		image{
			width: 305rpx;
			height: 305rpx;
		}
	}
	.advertising{
		padding: 0 35rpx;
		height: 210rpx;
		image{
			width: 100%;
			height: 210rpx;
		}
	}
}
.rule{
	margin: 0 35rpx;
	padding: 26rpx 40rpx;
	background-color: #FFFFFF;
	.rule_title{
		font-size: 30rpx;
		color: #212121;
		display: inline-block;
		position: relative;
		&::after{
			content: '';
			display: block;
			width: 100%;
			height: 18rpx;
			background-color: #F58B1E;
		}
	}
	.rule_item{
		font-size: 28rpx;
		color: #666666;
		line-height: 54rpx;
		span{
			color: #212121;
			font-weight: 500;
		}
	}
}
.qrcode_box{
	text-align: center;
	image{
		width: 240rpx;
		height: 240rpx;
		margin-top: 60rpx;
	}
	.qrcode_p{
		font-size: 28rpx;
		color: #666666;
		margin-top: 12rpx;
	}
}