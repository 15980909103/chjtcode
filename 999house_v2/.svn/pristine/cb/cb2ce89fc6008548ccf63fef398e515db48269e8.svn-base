/* 头部样式 */
.header{
	width: 100%;
	height: 1.5rem;
	position: absolute;
	top: 0;
	left: 0;
}

.header-box{
	width: 100%;
	/* background-color: #fff; */
	padding: 0 0.32rem;
	box-sizing: border-box;
	font-size: 0;
	position: fixed;
	top: 0;
	z-index: 90;
}

.header-options{
	width: 20%;
	font-size: 0.26rem;
	color: rgba(117, 117, 117, 1);
	padding: 0.3rem 0;
	box-sizing: border-box;
	display: flex;
	justify-content: space-between;
	align-items: center;
	display: inline-block;
	vertical-align: middle;
	
}

.header-location{
	width: 100%;
	overflow:hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	-o-text-overflow:ellipsis;
	font-size: 0.3rem;
	color: #212121;
	font-weight: 500;
}

.iconjiantou{
	font-size: 0.26rem;
	margin-left: 0.02rem;
}

.header-scan{
	margin-left: 0.4rem;
}

.iconzhoubian,
.iconsaoma{
	font-weight: 600;
	font-size: 0.24rem;
	margin-right: 0.12rem;
}

.header-search{
	
	width: 80%;
	height: 0.8rem;
	font-size: 0.26rem;
	color: rgba(173, 173, 173, 1);
	background: #FFFFFF;
	box-shadow: 0px 3px 20px 0px #F5F5F5;
	border-radius: 6px;
	border: 1px solid #E0E0E0;
	/* margin-left: .35rem; */
	/* display: flex;
	align-items: center; */
	display: inline-block;
	vertical-align: middle;
	line-height: 0.76rem;
	box-sizing: border-box;
	padding-left: .16rem;
}

.icon901{
	font-size: 0.3rem;
	display: flex;
	align-items: center;
	
}

.icon901:before{
	position: relative;
	top: .04rem;
}

.header-tip{
	margin-left: 0.15rem;
	font-size: 0.26rem;
}