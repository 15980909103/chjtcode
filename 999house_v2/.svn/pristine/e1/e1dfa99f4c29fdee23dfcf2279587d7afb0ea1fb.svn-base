/* 导航样式 */

.nav{
	/* height: 3.72rem; */
	margin: 0.3rem 0;
	width: 100vw;
	display: flex;
	overflow-x: scroll;
	-webkit-overflow-scrolling: touch;
	font-size: 0;
}

.nav-wrap,
.nav-box{
	width: 100vw;
	height: 100%;
}

.nav-box{
	display: flex;
	flex-wrap: wrap;
}

.nav-item{
	width: 20%;
	/* width: 1.875rem; */
	height: 1.6rem;
	font-size: 0.28rem;
	font-weight: 800;
	color: #212121;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.nav-item img{
	width: .9rem;
	height: .9rem;
	margin-bottom: 0.15rem;
}