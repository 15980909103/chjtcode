.top_title{
	width: 100%;
	height: .88rem;
	font-size: .32rem;
	font-weight: bold;
	background-color: #fff;
	color: rgba(33, 33, 33, 1);
	display: flex;
	justify-content: center;
	align-items: center;
	position: fixed;
	top: 0;
	z-index: 888;
	border-bottom: 1px solid rgba(224, 224, 224, 1);
}

.top_title_1{
	width: 100%;
	height: .88rem;
	background-color: #fff;
	border-bottom: 1px solid rgba(224, 224, 224, 1);
}

.top_title .iconfont{
	width: .88rem;
	height: 100%;
	font-size: .4rem;
	position: absolute;
	left: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
	padding-top: .1rem;
}

.top_title_2 .iconfont{
	height: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
}