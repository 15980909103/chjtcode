.wrap{
	box-sizing: border-box;
	padding: .18rem;
}

.house-item{
	padding: .2rem 0 .24rem;
	margin-top: 0;
}

.house-name{
	margin-top: 0;
}

.house-info{
	margin: .18rem 0 .16rem;
}

.price{
	font-size: .4rem;
	font-weight: bold;
	color: rgba(252, 77, 57, 1);
	margin-right: .1rem;
}

.price i{
	font-size: .24rem;
}

.house-info span:nth-child(1)::before{
	width: 0;
	height: 0;
}

.tip{
	margin-bottom: .2rem;
}

.bottom-dist{
	width: 100%;
	height: 2rem;
}

.content-wrap{
	width: 100%;
	word-wrap: break-word;
	color: #fff;
}

.content-wrap img{
	width: 100%;
}

.btn-box-home{
	position: fixed;
	right: .1rem;
	top: 8rem;
    background: linear-gradient(90deg, #59d4f0 0%, #cd59f0 100%);
    width: 50px;
    height: 50px;
	border-radius: 50%;
	box-shadow: 0 0 .1rem rgba(0,0,0,6);
	font-weight: bold;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #fff;
}