/* 选取位置页面 */
						
.choose-location{
	width: 100vw;
	height: 100vh;
	background: #F7F7F7;
	position: fixed;
	top: 0;
	z-index: 93;
}
.choose-location .location-search{
	padding: 20rpx 24rpx;
	
}
.choose-location .u-search .u-content{
	box-shadow: 0px 3rpx 20rpx 0rpx #F5F5F5;
	border-radius: 6rpx;
	border: 1rpx solid #E0E0E0;
}

.location-search,
.location-info{
	background-color: #fff;
}

.location-search{
	height: 60px;
	width: 100%;
}

.choose-location .u-action{
	color: rgba(117, 117, 117, 1)!important;
}

.choose-location .u-placeholder-class{
	color: #ADADAD;
	font-size: 26rpx;
	font-weight: 400;
}

.location-info{
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 28rpx;
	padding: 30rpx 32rpx 42rpx;
	color: rgba(117, 117, 117, 1);
}

.location-info-left span{
	color: #000;
	font-size: 34rpx;
	margin-right: 20rpx;
}

.location-info-right{
	color: #000;
	display: flex;
	align-items: center;
}

.location-info-right span{
	height: 22rpx;
	font-size: 26rpx;
	margin-right: 10rpx;
	vertical-align: text-bottom;
}

.location-tip{
	width: 100%;
	font-size: 30rpx;
	color: rgba(117, 117, 117, 1);
	box-sizing: border-box;
	padding: 30rpx 32rpx 0;
}

.location-tip .city{
	width: 100%;
	margin-top: 22rpx;
	display: flex;
	align-items: center;
	flex-wrap: wrap;
}

.city-tip{
	width: 200rpx;
	height: 80rpx;
	background-color: #fff;
	border-radius: 6rpx;
	border: 1rpx solid #EBEBEB;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-bottom: 24rpx;
}

.city-tip:nth-child(3n-1){
	margin: 0 23rpx 24rpx;
}

.nosearch-tip{
	text-align: center;
	width: 100%;
	margin-top: 100rpx;
}