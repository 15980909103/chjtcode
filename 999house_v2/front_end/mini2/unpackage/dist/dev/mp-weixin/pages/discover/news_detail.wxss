.content{
	width: 100%;
	box-sizing: border-box;
	padding: 56rpx 32rpx 0;
	overflow-y: scroll;
	overflow-x: hidden;
}
.allwrap{
	width: 100%;
	height: 130rpx;
}
.content-title{
	font-size: 38rpx;
	font-weight: 800;
	line-height: 60rpx;
}
.content-time text{
	/* width: 70rpx; */
	display: inline-block;
	/* width: 70rpx; */
	height: 34rpx;
	background-color: #F0F0F0;
	border-radius: 2rpx;
	color: #999999;
	
	margin:  0 14rpx 0 0;
	line-height: 34rpx;
	text-align: center;
	font-weight: 500;
	float: left;
	font-size: 30rpx ;
}
.original{
	font-size: 24rpx !important;
	width: 70rpx;
}
.content-title text::after{
	content: '';
	clear: both;
}
.content-time{
	/* font-size: 26rpx; */
	font-size: 30rpx ;
	color: rgba(117, 117, 117, 1);
	margin: 12rpx 0 26rpx;
	line-height: 32rpx;
}
.content-info{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin-bottom: 34rpx;
	font-size: 30rpx !important;
	color: #576B95 !important;
	background-color: #FFFFFF !important;
	vertical-align: middle;
}
.content-info ._img{
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	margin-right: 14rpx;
}
.content-text{
	width: 100%;
	overflow: hidden;
	font-size: 30rpx;
	line-height: 60rpx;
	color: rgba(77, 77, 77, 1);
}
.content-text ._img{
	width: 100%;
	margin: 20rpx 0;
}
.content-read{
	display: inline-block;
	/* width: 100%; */
	font-size: 26rpx;
	color: rgba(173, 173, 173, 1);
	padding: 32rpx 0 22rpx;
}
.content-like{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center; 
	font-size: 26rpx;
	color: rgba(87, 107, 149, 1);
	vertical-align: bottom;
}
.content_buttom_box{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	border-bottom: 1rpx solid rgba(224, 224, 224, 1);
}
.talk-box{
	margin-top: 40rpx;
	box-sizing: border-box;
	padding: 0 32rpx;
}
.talk-title,
.recommend-title{
	width: 100%;
	box-sizing: border-box;
	font-size: 34rpx;
	padding-bottom: 36rpx;
}
.talk-box .more_btn{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	color:rgba(254, 130, 30, 1);
	background-color: #F6F6F6 !important;
	margin-top: 40rpx;
	margin-bottom: 70rpx;
}
.talk-box .more_btn:after{
  border:none;
}
.talk-box .more_btn .button__text{
	font-size: 32rpx;
	color: rgba(254, 130, 30, 1);
}
.recommend{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.recommend-title{
	box-sizing: border-box;
	padding-left: 32rpx;
	padding-bottom: 0;
}
.recommend-btn{
	width: 300rpx;
	margin-top: 10rpx;
	border: none;
	font-size: 26rpx;
	color: rgba(162, 162, 162, 1);
	
	/* padding-bottom: 1.3rpx; */
}
.recommend-btn button{
	border: none !important;
}
.u-size-default{
	border: none !important;
}
.recommend-btn .iconjiantou{
	margin-left: 6rpx;
	font-size: 24rpx;
}
.talk-box-notext{
	text-align: center;
	width: 100%;
	margin-top: 20rpx;
	margin-bottom: 40rpx;
}
.talk-box-notext image {
	display: block;
	width: 280rpx;
	height: 130rpx;
	/* margin-bottom: 34rpx; */
	margin: 0 auto 34rpx;
}
page {
  font-family: sans-serif;
}
page, page, ._header, ._section, ._footer, ._div, ._ul, ._ol, ._li, ._img, ._a, ._span, ._em, ._del, ._legend, center, ._strong, ._var, ._fieldset, form, label, ._dl, ._dt, ._dd, ._cite, input, ._hr, ._time, ._mark, ._code, ._figcaption, ._figure, textarea, ._h1, ._h2, ._h3, ._h4, ._h5, ._h6, ._p {
  margin: 0;
  border: 0;
  padding: 0;
  font-style: normal;
}
page, page {
  -webkit-touch-callout: none;
  -webkit-text-size-adjust: none;
  -webkit-tap-highlight-color: transparent;
  -webkit-user-select: none;
  background-color: #fff;
}
._nav, ._article, ._aside, ._details, ._main, ._header, ._footer, ._section, ._fieldset, ._figcaption, ._figure {
  display: block;
}
._img, ._a, button, ._em, ._del, ._strong, ._var, label, ._cite, ._small, ._time, ._mark, ._code, textarea {
  display: inline-block;
}
._header, ._section, ._footer {
  position: relative;
}
._ol, ._ul {
  list-style: none;
}
input, button, textarea {
  border: 0;
  margin: 0;
  padding: 0;
  font-size: 1em;
  line-height: 1em;
  /*-webkit-appearance:none;*/
  background-color: transparent;
}
._span {
  display: inline-block;
}
._i {
  font-style: normal;
}
._a:active, ._a:hover {
  outline: 0;
}
._a, ._a:visited {
  text-decoration: none;
}
label, .wordWrap {
  word-wrap: break-word;
  word-break: break-all;
}
._table {
  border-collapse: collapse;
  border-spacing: 0;
}
._td, ._th {
  padding: 0;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.clearfix:after {
  content: '';
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
}
[v-cloak] {
  display: none;
}
/*隐藏滚轮*/
::-webkit-scrollbar {
  display: none;
}
#app {
  height: 100vh;
  width: 100vw;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  font-size: 28rpx;
}
/**
 *	文字省略
 *	（行数）
 *	-webkit-line-clamp: 1;
 */
.text-omit {
  text-align: justify;
  text-justify: newspaper;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.van-ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.van-multi-ellipsis--l2 {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
