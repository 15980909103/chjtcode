
.template-house{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 24rpx;
	color: rgba(90, 96, 102, 1);
	box-sizing: border-box;
	padding: 30rpx 0;
	border-bottom: 1rpx solid rgba(224, 224, 224, 1);
}
.template-house:last-child{
	border-bottom: none;
}
.template-house ._img{
	width: 190rpx;
	height: 138rpx;
	border: 1px solid #E6E6E6;
	margin-right: 30rpx;
}
.template-house-title{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-bottom: 10rpx;
}
.template-house-title ._h4{
	font-size: 30rpx;
	color: rgba(11, 15, 18, 1);
}
.template-house-title .van-tag{
	font-size: 22rpx;
	margin-left: 26rpx;
}
.template-house-box{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.template-house-price{
	font-size: 32rpx;
	color: rgba(252, 77, 57, 1);
	font-weight: bold;
	margin-top: 10rpx;
}

