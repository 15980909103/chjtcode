
.speedy{
	width: 100%;
	/* height: 3.05rpx; */
	/* height: 1.48rpx; */
	margin: 46rpx 0 8rpx;
	padding: 0 20rpx;
	box-sizing: border-box;
	touch-action: pan-y;
}
.speedy-card{
	width: 100%;
	/* height: 100%; */
	background: #FFFFFF;
	box-shadow: 0 2rpx 18rpx 0 #F5F5F5;
	border-radius: 6rpx;
	/* border: 1px solid #EBEBEB; */
	position: relative;
}
.speedy-card .van-tab{
	-webkit-box-flex: 0;
	-webkit-flex: none;
	        flex: none;
	padding: 0 26rpx;
	font-size: 34rpx;
	font-weight: 600;
	color: #212121;
}
.speedy-card .van-tabs__wrap{
	height: 30%;
}
.speedy-card .van-tab__text{
	position: relative;
	z-index: 2;
}
.speedy-title{
	font-size: 30rpx;
	font-weight: 800;
}
.speedy-card .van-tabs__nav--line{
	padding-bottom: 5rpx;
}
.speedy-card .van-tabs__line{
	height: 14rpx;
	width: 94rpx;
	border-radius: 1rpx;
	left: -20rpx;
	background: -webkit-linear-gradient(right, rgba(255, 203, 79, 1) 0%, rgba(255, 141, 48, 1) 100%);
	background: linear-gradient(270deg, rgba(255, 203, 79, 1) 0%, rgba(255, 141, 48, 1) 100%);
}
.speedy-card .van-tabs__content{
	height: 70%;
	font-size: 28rpx;
	font-weight: 500;	
	color: #212121;
}
.speedy-card .van-tabs__track,
.speedy-card .van-tab__pane-wrapper,
.speedy-card .van-tab__pane{
	height: 100%;
}
.speedy-wrap{
	/* height: 60%; */
	/* display: flex; */
	/* height: 1.48rpx; */
	/* justify-content: space-between; */
	padding: 20rpx 26rpx;
	/* box-sizing: border-box; */
}
.speedy-wrap .speedy-item{
	display: inline-block;
	vertical-align: middle;
	width: 500rpx;
}
.speedy-text{
	font-size: 22rpx;
	margin-top: 18rpx;
	color: #ADADAD;
	font-weight: 400;
}
.speedy-img{
	display: inline-block;
	vertical-align: middle;
	width: 140rpx;
	height: 124rpx;
	/* margin-left: 0.68rpx; */
	/* position: relative;
	top: -0.2rpx; */
}
.speedy-btn{
	position: absolute;
	top: 83rpx;
	right: 30rpx;
	/* margin: 0 0.26rpx; */
	width: 160rpx;
	height: 60rpx;
	background-color: #FFF2E7;
	
	/* height: 40%; */
	color: #FE821E;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border-top: 1rpx solid rgba(240, 240, 240, 1);
}
.speedy-text-active{
	color: #ED3335;
}

