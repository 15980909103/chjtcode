.my-signature view{position: relative;z-index: 20;}
.my-signature text{background-color: #8C74E6;padding: 0 3.5vw;color:#8C74E6;position: relative;top: -3.5vw;}
.my-canvas{width: 100vw;height: 100vh;position: absolute;top: 0;left: 0;z-index: 50;}